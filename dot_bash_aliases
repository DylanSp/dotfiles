alias n='nano'

alias e='emacs'

alias md='mkdir'
alias ll='ls -al'

alias mv='mv -i'
alias rm='rm -i'

# Git
alias gstat='git status'
alias glog='git log'
alias grm='git rm'
alias ga='git add'
alias gcom='git commit'
alias gdiff='git diff'
alias gunstage='git reset HEAD'
alias gdiscard='git checkout --'
alias gpush='git push origin'
alias gpull='git pull'

# Haskell Stack
alias sexec='stack exec -- '
alias sbuild='stack build'

# Note: with this, HLint can't be used outside a Stack project
alias hlint='stack exec -- hlint'

# Note: with this, hoogle can't be used outside a Stack project
alias hoogle='stack hoogle'

# Haskell Yesod
alias ydev='stack exec -- yesod devel'

# Write Yourself a Scheme
alias scm_exec='stack exec write-yourself-a-scheme'

# Docker
alias dps='sudo docker ps'
alias dimgs='sudo docker images'
alias dkill='sudo docker kill'
alias drm='sudo docker rm'

# Python
alias py='python3'
